#!/bin/sh 
# $Id$
#
#
#set -x
#
URL_GAS_ENERGY_COUNTER="http://192.168.178.10:8080/api/getPlainValue/14205"
#
SCRIPT=`basename $0`
EXITCODE="0"
#-------------------------------
info()
{
   logger -t "${SCRIPT}[$$]" $*
}
error()
{
   logger -p user.err -t "${SCRIPT}[$$]" "ERROR: $*"
}
debug()
{
   logger -p user.debug -t "${SCRIPT}[$$]" $*
}
#--------------------------------------------
# MAIN
#-----
GAS_ENERGY_COUNTER=`wget -q -O - $URL_GAS_ENERGY_COUNTER`
echo  "Zaehlerstand Gas: ${GAS_ENERGY_COUNTER}." | sendgtalk &

#---------------------------------------------------
exit $EXITCODE
# EOF